{{#servers}}
  {{#type}}
  {{#cdn}}
server {
  listen {{port}};
  {{#domain}}
  server_name {{.}};
  {{/domain}}

  error_page 404 500 502 503 504 @fallback;

  location ~* /(.*)$ {
    access_log off;
    expires 365d;
    add_header Cache-Control public;
    try_files $uri /$1 =404;
  }

  location @fallback {
    try_files /error.html =500;
  }

  gzip on;
  gzip_comp_level 6;
  gzip_min_length 256;
  gzip_vary on;
  gzip_types
    text/plain
    text/css
    application/json
    application/javascript
    application/wasm
    text/xml
    application/xml
    application/xml+rss
    text/javascript
    font/ttf
    font/otf
    font/woff
    application/font-woff
    application/octet-stream
    application/font-woff2;
}
  {{/cdn}}
  {{#host}}
server {
  listen {{port}};
  {{#domain}}
  server_name {{.}};
  {{/domain}}
  root {{root}};

  error_page 404 500 502 503 504 @fallback;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    {{#entries}}
    try_files $uri /{{.}}$is_args$args;
    {{/entries}}
  }

  location @fallback {
    try_files /error.html =500;
  }

  # 静态资源缓存
  location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|eot|ttf|svg|mp4|webp)$ {
    expires 365d;
    add_header Cache-Control "public";
    access_log off;
  }

  gzip on;
  gzip_comp_level 6;
  gzip_min_length 256;
  gzip_vary on;
  gzip_types
    text/plain
    text/css
    application/json
    application/javascript
    application/wasm
    text/xml
    application/xml
    application/xml+rss
    text/javascript
    font/ttf
    font/otf
    font/woff
    application/font-woff
    application/octet-stream
    application/font-woff2;
}
  {{/host}}
  {{#proxy}}
server {
  listen {{port}};
  {{#domain}}
  server_name {{.}};
  {{/domain}}

  error_page 404 500 502 503 504 @fallback;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host "{{proxy_url}}";
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    proxy_pass http://{{proxy_url}};
  }

  location @fallback {
    try_files /error.html =500;
  }

  # 静态资源缓存
  location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|eot|ttf|svg|mp4|webp)$ {
    expires 365d;
    add_header Cache-Control "public";
    access_log off;
  }

  gzip on;
  gzip_comp_level 6;
  gzip_min_length 256;
  gzip_vary on;
  gzip_types
    text/plain
    text/css
    application/json
    application/javascript
    application/wasm
    text/xml
    application/xml
    application/xml+rss
    text/javascript
    font/ttf
    font/otf
    font/woff
    application/font-woff
    application/octet-stream
    application/font-woff2;
}
    {{/proxy}}
  {{/type}}
{{/servers}}
